ScreenManager:
    id: manager
    Screen:
        name: "Main"
        canvas:
            Color:
                rgb: .35, .39, .43
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:"vertical"
            padding: 10
            spacing: 10
            Button:
                text: 'Configurar'
                on_press: app.open_settings()
            Button:
                text: 'Graficar'
                on_press: manager.current = 'Graphics'
            Button:
                text: 'Ayuda'
                on_press: manager.current = 'Help'
            Button:
                text: 'Creditos'
                on_press: manager.current = 'Credits'
    Screen:
        name: 'Help'
        BoxLayout:
            orientation: 'vertical'
            RstDocument:
                source: 'docs/help.rst'

            BoxLayout:
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Rectangle:
                        size: self.size
                orientation: 'horizontal'
                size_hint: 1, .1
                Button:
                    text: '<'
                    on_press: manager.current = 'Main'
                Button:
                    text: 'Configurar'
                    on_press: app.open_settings()
                Button:
                    text: 'Joya, graficame algo! >'
                    on_press: manager.current = 'Graphics'
    Screen:
        name: 'Credits'
        BoxLayout:
            orientation: 'vertical'
            RstDocument:
                source: 'docs/credits.rst'
            Button:
                size_hint_y:None
                text: '<'
                on_press: manager.current = 'Main'
    Screen:
        name: "Graphics"
        canvas:
            Color:
                rgb: .31, .35, .39
            Rectangle:
                size: self.size
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                size_hint_x:None
                Button:
                    text: 'FCFS'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SSTF'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CSCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'LOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CLOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'Configurar'
                    on_press: app.open_settings()
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: '<'
                        on_press: manager.current = 'Main'
                    Button:
                        text: 'x'
                        on_press: graph_screen.clear_ui()
            GraphicScreen:
                rows: 2
                id: graph_screen
                labels: labels
                graph_canvas: graph_canvas
                AnchorLayout:
                    anchor_x:"center"
                    anchor_y:"center"
                    Graphic:
                        id: graph_canvas
                        size_hint: None, None
                        size: 512, 470
                BoxLayout:
                    id: labels
                    size_hint: 1, .12
                    Label:
                        text: " - "
                    Label:
                        text: " - "
                    Label:
                        text: " - "