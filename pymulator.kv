ScreenManager:
    id: manager
    Screen:
        name: "Main"
        canvas:
            Color:
                rgb: .35, .39, .43
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:"vertical"
            padding: 100
            spacing: 10
            Button:
                text: 'Configurar'
                on_press: app.open_settings()
            Button:
                text: 'Ayuda'
                on_press: manager.current = 'Help'
            Button:
                text: 'Graficar'
                on_press: manager.current = 'Graphics'
            Button:
                text: 'Creditos'
                on_press: manager.current = 'Credits'
            Button:
                text: 'x'
                on_press: app.stop()
    Screen:
        name: 'Help'
        Button:
            text: '< te la creiste!'
            on_press: manager.current = 'Main'
            # TODO: add help screen
            # http://kivy.org/docs/api-kivy.uix.rst.html?highlight=text
    Screen:
        name: 'Credits'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'los pibes'
            Label:
                text: 'para todo lo demas, existe mastercard'
            Button:
                text: '<'
                on_press: manager.current = 'Main'
            # TODO: add proper credits
    Screen:
        name: "Graphics"
        canvas:
            Color:
                rgb: .31, .35, .39
            Rectangle:
                size: self.size
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                size_hint_x:None
                Button:
                    text: 'FCFS'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SSTF'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CSCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'LOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CLOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'Configurar'
                    on_press: app.open_settings()
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: '<'
                        on_press: manager.current = 'Main'
                    Button:
                        text: 'x'
                        on_press: graph_screen.clear_ui()
            GraphicScreen:
                rows: 2
                id: graph_screen
                labels: labels
                graph_canvas: graph_canvas
                AnchorLayout:
                    anchor_x:"center"
                    anchor_y:"center"
                    Graphic:
                        id: graph_canvas
                        size_hint: None, None
                        size: 512, 470
                BoxLayout:
                    id: labels
                    size_hint: 1, .12
                    Label:
                        text: "Metodo: - "
                    Label:
                        text: "Movimientos: - "
                    Label:
                        text: "Direccion: - "