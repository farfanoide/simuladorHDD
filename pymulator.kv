ScreenManager:
    id: manager
    Screen:
        name: "Main"
        canvas:
            Color:
                rgb: .35, .39, .43
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:"vertical"
            padding: 100
            spacing:10
            Button:
                text:"Set Up"
                on_press: app.open_settings()
            Button:
                text:"Ejecutar"
                on_press: manager.current = 'Graphics'
            Button:
                text: 'Ayuda'
                on_press: manager.current = 'Help'
            Button:
                text: 'Creditos'
                on_press: manager.current = 'Credits'
            Button:
                text: 'Cerrar'
                on_press: app.stop()
