ScreenManager:
    id: manager
    Screen:
        name: "Main"
        canvas:
            Color:
                rgb: .35, .39, .43
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:"vertical"
            padding: 100
            spacing: 10
            Button:
                text: 'Configurar'
                on_press: app.open_settings()
            Button:
                text: 'Ayuda'
                on_press: manager.current = 'Help'
            Button:
                text: 'Graficar'
                on_press: manager.current = 'Graphics'
            Button:
                text: 'Creditos'
                on_press: manager.current = 'Credits'
            Button:
                text: 'x'
                on_press: app.stop()
    Screen:
        name: 'Help'
        Button:
            text: '< te la creiste!'
            on_press: manager.current = 'Main'
    Screen:
        name: 'Credits'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'los pibes'
            Label:
                text: 'para todo lo demas, existe mastercard'
            Button:
                text: '<'
                on_press: manager.current = 'Main'
    Screen:
        name: "Graphics"
        canvas:
            Color:
                rgb: .31, .35, .39
            Rectangle:
                size: self.size
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                size_hint_x:None
                Button:
                    text: 'FCFS'
                    on_press:  graph_canvas.draw_lines(app.simulator.executeFCFS())
                Button:
                    text: 'SSTF'
                    on_press: print app.simulator.executeSSTF()
                Button:
                    text: 'SCAN'
                    on_press: print app.simulator.executeSCAN()
                Button:
                    text: 'CSCAN'
                    on_press: print app.simulator.executeCSCAN()
                Button:
                    text: 'LOOK'
                    on_press: print app.simulator.executeLOOK()
                Button:
                    text: 'CLOOK'
                    on_press: print app.simulator.executeCLOOK()
                Button:
                    text: 'Clear'
                    on_press: graph_canvas.draw_grid()
                Button:
                    text: '<'
                    on_press: manager.current = 'Main'
            GridLayout:
                rows: 2
                AnchorLayout:
                    anchor_x:"center"
                    anchor_y:"center"
                    Graphic:
                        canvas:
                            Color:
                                rgb:.1,.1,.1
                            Rectangle:
                                size: self.size
                        id: graph_canvas
                        padding: 100
                        size_hint:None,None
                        size: 512,400
                BoxLayout:
                    size_hint: 1, .2
                    Label:
                        text: "Metodo: SSTF"
                    Label:
                        text: "Movimientos: 230"
                    Label:
                        text: "Direccion: Izquierda"